<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".DetallePelicula">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/iv_pelicula_img"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bones"/>

        <TextView
            android:id="@+id/tv_nombre_pelicula"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="BONES"
            android:textSize="25sp"
            android:gravity="center"
            android:textColor="@color/amarilloesmicolor"
            />

        <TextView
            android:id="@+id/tv_descrip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="30dp"
            android:text="Sinopsis descripcion bla blassssss sssssssssss sssssss ssssssssss sssssssssssssssssssssssssssss"
            android:textSize="14sp"
            android:textColor="@color/amarilloesmicolor"
            />

        <Button
            android:id="@+id/btn_buyTickets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BUY MY TICKETS!"
            android:layout_gravity="center"
            android:background="@drawable/round_button"
            android:textColor="@color/black"
            android:paddingHorizontal="25dp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/seatsLeft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/mainText"
            android:textStyle="italic"
            android:textAlignment="center"
            android:layout_marginTop="7dp"
            />


    </LinearLayout>

</LinearLayout>